<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:textColor="@color/white"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Guia basico para investimentos a medi prazo" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
          <ImageView
              android:id="@+id/imagemMenu"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

          </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/titulos"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Investimentos a medio prazo"
                    />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="@string/tesouro_direto" />

                <ImageView
                    android:id="@+id/imagemMedioUm"
                    android:layout_width="416dp"
                    android:layout_height="99dp" />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="@string/letras" />

                <ImageView
                    android:id="@+id/imagemMediDois"
                    android:layout_width="match_parent"
                    android:layout_height="96dp" />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="@string/cdb" />

                <ImageView
                    android:id="@+id/imagemMedioTres"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="@string/fundos_investimentos" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="105dp" />



                    <TextView
                        style="@style/textos_medio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/conteudo"
                        />
            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

