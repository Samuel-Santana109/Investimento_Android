<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:textColor="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:padding="5dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    style="@style/titulos"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Investimentos a medio prazo"
                    />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/tesouro_direto" />

                <ImageView
                    android:id="@+id/imagemMedioUm"
                    android:layout_width="400dp"
                    android:layout_height="99dp"
                    android:layout_margin="16dp" />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/letras" />

                <ImageView
                    android:id="@+id/imagemMedioDois"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_margin="16dp" />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/cdb" />

                <ImageView
                    android:id="@+id/imagemMedioTres"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="16dp" />

                <TextView
                    style="@style/textos_medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="16dp"
                    android:text="@string/fundos_investimentos" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="16dp" >

                    <TextView
                        style="@style/textos_medio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/conteudo"
                        />


            </LinearLayout>

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_margin="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

