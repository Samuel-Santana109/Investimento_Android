<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity" >


    <Button
        style="@style/botao_inicial"
        android:id="@+id/fixo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seja Bem vindo!"
       />

    <TextView
        style="@style/titulos"
        android:layout_width="215dp"
        android:layout_height="82dp"
        android:layout_marginTop="140dp"
        android:text="O que voce busca investir na bolsa de valores ?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        style="@style/titulos"
        android:layout_width="316dp"
        android:layout_height="33dp"
        android:text="Investimento de medio Prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        />

    <Button
        style="@style/botao_inicial"
        android:id="@+id/medio"
        android:background="@color/yellow"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:text="Curto prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        style="@style/titulos"
        android:layout_width="291dp"
        android:layout_height="29dp"
        android:text="Investimento de curto prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346"
        />

    <Button
        style="@style/botao_inicial"
        android:id="@+id/curtoPrazo"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:text=" medio Prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646"
        />

    <TextView
        style="@style/titulos"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:text="Investimento de Longo Prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747"
        />

    <Button
        style="@style/botao_inicial"
        android:id="@+id/Botaomenu"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:text="Longo Prazo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838"
        />


</androidx.constraintlayout.widget.ConstraintLayout>